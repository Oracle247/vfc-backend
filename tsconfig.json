{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    // "baseUrl": "src",
    "paths": {
      // "@/*": [
      //   "*"
      // ],
      // "@config": [
      //   "config"
      // ],
      // "@email": [
      //   "email"
      // ],
      // "@user": [
      //   "user"
      // ],
      // "@constants/*": [
      //   "core/constants/*"
      // ],
      // "@databases": [
      //   "core/databases"
      // ],
      // "@exceptions/*": [
      //   "core/exceptions/*"
      // ],
      // "@interfaces/*": [
      //   "interfaces/*"
      // ],
      // "@middlewares/*": [
      //   "core/middlewares/*"
      // ],
      // "@routes/*": [
      //   "core/routes/*"
      // ],
      // "@services/*": [
      //   "services/*"
      // ],
      // "@utils/*": [
      //   "core/utils/*"
      // ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env"
  ],
  "ts-node": {
    "files": true
  },
  "files": [
    "src/types/express/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/http",
    "src/logs",
    "src/tests"
  ]
}